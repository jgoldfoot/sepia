{{!< default}}

<main class="content" role="main">
    <div class='bk-top-nav' {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        {{> menu}}
    </div>
    <div id="view-menu">
        <div class="view-menu-cont">
   
               
            <a class="list-view" href="#"></a>
            <a class="grid-view grid-view-active" href="#"></a>
   
        </div> 
    </div>
</main>

 <header class="page-author">
<h1 class="post-title">Author profile</h1>
        {{#if author.name}}
            <section class="author">
                    
                <figure class="user-image">
                    <div id="user-image" class="img" {{#if author.image}}style="background-image: url({{author.image}})"{{/if}}></div>
                </figure>
                
                <div class="info-author">
                        
                    <h4>{{author.name}}</h4>
                    <p>
                        {{author.bio}}
                    </p>
                </div>
            
            </section>
            {{/if}}
            
            <section class="blog-social blog-social-author">

            {{! Including the social template (partials/social)}}
            {{> socials}}
        
        </section>
</header>


<div class='post-container grid-cont-post'>
    {{#foreach posts}}
        
    <article class="{{post_class}}">

        <span class="ico-featured"></span>
    
        <div class="post-cont">
            
            <header class="post-header">
               
                <span class="post-data"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
               
                <a href="{{url}}#disqus_thread" class="post-comment"></a>
               
                <h2 class="post-title post-title-grid"><a href="{{url}}">{{{title}}}</a></h2>
            
            </header>
            
            <a class="post-image" >{{content words="0"}}</a>
            
            <section class="post-excerpt">
                <p>{{excerpt}}&hellip;</p>
            </section>
            
            <div class="post-info">
            
                <span class="post-data"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                {{#author}}
                by <a href="{{url}}">{{name}}</a>  
                {{/author}}</span>
            
                <a href="{{url}}#disqus_thread" class="post-comment"></a>
            
                <a class="post-more" href="{{url}}">Read More</a>
            
             </div>
        
        </div>
        
        <ul class='hidden-tag-list'>
            {{#each tags}}
                <li>{{name}}</li>
            {{/each}}
        </ul>
    </article>
    
    <hr>
    
    {{/foreach}}
    
</div>

